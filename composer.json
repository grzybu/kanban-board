{
	"autoload": {
		"classmap": [
			"src/classes"
		]
	},
	"require": {
		"php" : "^7.2",
		"phpseclib/phpseclib": "2.0.*",
		"mustache/mustache": "^2.9",
		"vierbergenlars/php-semver": "^3.0",
		"knplabs/github-api": "^1.5",
		"michelf/php-markdown": "^1.6",
		"phpunit/phpunit": "5.0.*",
		"symfony/dotenv": "^4.3@dev",
		"phpmd/phpmd": "@stable"
	},
	"require-dev": {
		"squizlabs/php_codesniffer": "^3.0"
	},
	"minimum-stability": "dev",

	"scripts": {
		"check": [
			"@version-check",
			"@cs-check",
			"@md-check"
		],
		"version-check": "php -v",
		"cs-check": "phpcs src/classes",
		"md-check": "phpmd \"src/classes\" xml phpmd.xml --suffixes php"
	}
}
